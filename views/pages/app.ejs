<%- include('../includes/head') %>
<head>
  <style>

#sidebar {
    width: 250px;
    position: fixed;
    top: 0;
    left: -250px;
    height: 100vh;
    z-index: 999;
    background: #222;
    transition: all 0.3s;
    overflow-y: scroll;
}

#sidebar.active {
    left: 0;
}

#close-sidebar {
    width: 35px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
    -webkit-transition: all 0.3s;
    -o-transition: all 0.3s;
    transition: all 0.3s;
}

div#mCSB_1 {
    height: 100%;
}
div#mCSB_1_container {
    height: 100%;
}


  </style>

</head>
<body>

  <div class="container-fluid d-flex justify-content-center px-0 mx-0 " id="app-container">
    <div class="row w-100 text-center">
      <%- include('../partials/appmodal.ejs') %> 
      
      <!-- Sidebar  -->
      <nav id="sidebar">
        <div id="close-sidebar">
            <i class="fas fa-arrow-left"></i>
        </div>
        <div class="justify-content-center d-flex pt-4 h-100">
          <%- include('../includes/sidepane.ejs') %> 
        </div>
      </nav>

      <!-- Main page -->
      <div class="col-sm-12 bg-dark">
        <!-- sidepane btn -->
      <div class="text-left position-absolute">
        <button type="button" id="sidebarCollapse" class="btn btn-info">
          <i class="fas fa-align-left"></i>
        </button>
        <!-- Main page content -->
      </div>
        <%- include('../includes/mainpane.ejs') %> 
      </div>

    </div>
  </div>

</body>

