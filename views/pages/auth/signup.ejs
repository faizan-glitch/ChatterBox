<%- include('../../includes/head') %>
</head>

<body>
  <%- include('../../partials/navbar') %>
  <div class='container d-flex justify-content-center align-items-center full-nav'>
    <div class='card'>
      <div class='card-header'>
        Sign Up
      </div>
      <div class='card-body '>
        <h5 class='card-title'>Create a new account</h5>
        <form>
          <div class='form-group row'>
            <label for='displayNameField' class='col-sm-4 col-form-label'>Name</label>
            <div class='col-sm-8'>
              <input type='text' class='form-control bg-secondary text-white' id='displayNameField' value=''
                name='name'>
            </div>
          </div>
          <div class='form-group row'>
            <label for='emailField' class='col-sm-4 col-form-label'>Email</label>
            <div class='col-sm-8'>
              <input type='email' class='form-control bg-secondary text-white' id='emailField' value='' name='email'>
            </div>
          </div>
          <div class='form-group row'>
            <label for='passwordField' class='col-sm-4 col-form-label pr-0'>Password</label>
            <div class='col-sm-8'>
              <input type='password' class='form-control bg-secondary text-white' id='passwordField' value=''
                name='password'>
            </div>
          </div>

        </form>
        <div class='d-flex justify-content-center w-100'>
          <button type='submit' class='btn btn-success w-100' id='signupBtn'>
            Sign Up
            <%- include('../../partials/loadingSpinner') %>
          </button>
        </div>

        <div class="text-center mt-2">
          <p>Already have an account? <a href="/login">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</body>
<%- include('../../includes/end') %>
<script src="scripts/signup.js"></script>