<%- include('../../includes/head') %>
</head>

<body style='height: 100vh !important'>
  <%- include('../../partials/navbar') %>
  <div class='container d-flex justify-content-center align-items-center h-75'>
    <div class='card'>
      <div class='card-header'>
        Enter your new password
      </div>
      <div class='card-body '>
        <h5 class='card-title'>Update</h5>
        <form>
          <input type="email" name="email" id="emailField" hidden value=" <%= email %>  ">
          <div class='form-group row'>
            <label for='passwordField' class='col-sm-4 col-form-label'>Password</label>
            <div class='col-sm-8'>
              <input type='password' class='form-control bg-secondary text-white' id='passwordField' value='' name='password'>
            </div>
          </div>

          <div class='form-group row'>
            <label for='confirmPasswordField' class='col-sm-4 col-form-label'>Password</label>
            <div class='col-sm-8'>
              <input type='password' class='form-control bg-secondary text-white' id='confirmPasswordField' value='' name='confirmPassword'>
            </div>
          </div>
        </form>
        <div class='d-flex justify-content-center w-100'>
          <button type='submit' class='btn btn-success w-100' id='updateBtn'> Update Password </button>
        </div>
<!-- 
        <div class="text-center mt-2">
          <p>Already have an account? <a href="/login">Login</a></p>
        </div> -->
      </div>
    </div>
  </div>
</body>
<%- include('../../includes/end') %>
<script src="../../scripts/newPassword.js"></script>