<%- include('../../includes/head') %>
</head>
<body>
  <%- include('../../partials/navbar') %>
  <div class='container d-flex justify-content-center align-items-center full-nav'>
    <div class="d-flex-column">
      <%- include('../../partials/alert') %>
      <div class='card'>
        <div class='card-header'>
          Login
        </div>
        <div class='card-body '>
          <h5 class='card-title'>Login with your credentials</h5>
          <form>
            <div class='form-group row'>
              <label for='emailField' class='col-sm-4 col-form-label'>Email</label>
              <div class='col-sm-8'>
                <input type='email' class='form-control bg-secondary text-white' id='emailField'
                  value='fizzy4604@gmail.com'>
              </div>
            </div>
            <div class='form-group row'>
              <label for='passwordField' class='col-sm-4 col-form-label pr-0'>Password</label>
              <div class='col-sm-8'>
                <input type='password' class='form-control bg-secondary text-white' id='passwordField'
                  value='hello123'>
              </div>
            </div>
          </form>
          <div class='d-flex justify-content-center w-100'>
            <button type='submit' class='btn btn-success w-100' id="loginBtn">
              Login
              <%- include('../../partials/loadingSpinner') %>
            </button>
          </div>
          <div class="text-center mt-2">
            <p>Don't have an account? <a href="/signup">Sign up</a></p>
          </div>
          <hr class="bg-light">
          <div class='d-flex justify-content-center w-100'>
            <a class='btn btn-danger w-100' href="/auth/google"> <i class="fab fa-google"></i> Sign in with
              Google
            </a>
          </div>
          <!-- <hr class="bg-light"> -->
          <div class='d-flex justify-content-center w-100 mt-3'>
            <button type='submit' class='btn btn-primary w-100' disabled> <i class="fab fa-facebook-f"></i> Sign in with Facebook
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<%- include('../../includes/end') %>
