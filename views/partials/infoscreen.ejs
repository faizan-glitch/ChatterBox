<div class="" style="background-color: #212121; height: 100vh !important; width: 100% !important;">

  <div class="row d-flex justify-content-between mx-2 align-items-center mt-2">
    <div class="col text-left">
      <div class="">Details</div>
      <div class=" text-muted"> <%= room.name %> </div>
    </div>
    <div class="col text-right">
      <i class="fa fa-times" aria-hidden="true"></i>
    </div>
  </div>
  <hr class="bg-light">

  <div class="row mx-2 ">
    <div class="col">
      <button class="btn rounded text-success bg-dark" data-toggle="modal" data-target="#inviteUser">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
      </button>
      <p class="text-muted">Add</p>
    </div>
    <div class="col">
      <button class="btn rounded text-success bg-dark">
        <i class="fa fa-search" aria-hidden="true"></i>
      </button>
      <p class="text-muted">Find</p>
    </div>
    <div class="col">
      <button class="btn rounded text-success bg-dark">
        <i class="fa fa-sign-out-alt" aria-hidden="true"></i>
      </button>
      <p class="text-muted">Leave</p>

    </div>
    <div class="col">
      <button class="btn rounded text-success bg-dark">
        <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
      </button>
      <p class="text-muted ">More</p>
    </div>
  </div>

  <!-- <hr class="bg-light"> -->

  <div class="w-100">
    <ul class="list-group">
      <li class="list-group-item border-gray p-0 m-0" style="border-radius: 0 !important;">
        <div class="accordion" id="accordionExample" style="border-radius: 0 !important;">
          <div class="card" style="background-color: #212121; border-radius: 0 !important;">
            <button class="btn btn-block text-left w-100 h-100" type="button" data-toggle="collapse"
              data-target="#collapseAbout" aria-expanded="true" aria-controls="collapseOne"
              style="border-radius: 0 !important;">
              About
            </button>


            <div id="collapseAbout" class="collapse hide" aria-labelledby="headingOne" >
              <div class="card-body text-left text-muted">
                The purpose of this room is to share our love of cats.
              </div>
            </div>
          </div>

      </li>
      <li class="list-group-item  border-gray p-0 m-0" style="border-radius: 0 !important;">
        <div class="accordion" id="accordionExample" style="border-radius: 0 !important;">
          <div class="card" style="background-color: #212121;">
            <button class="btn btn-block text-left w-100 h-100  d-flex justify-content-between align-items-center" type="button" data-toggle="collapse"
              data-target="#collapseMembers" aria-expanded="true" aria-controls="collapseOne" style="border-radius: 0 !important;">
              Members
              <span class="badge badge-primary badge-pill">
                <%= room.members.length %> 
              </span>
            </button>


            <div id="collapseMembers" class="collapse hide" aria-labelledby="headingOne"
              data-parent="#accordionExample">
              <div class="card-body text-left text-muted">
                <% room.members.forEach(member => { %>
                 <%= member._id %> 
                <% }) %>
              </div>
            </div>
          </div>
      </li>
      <li class="list-group-item  border-gray  p-0 m-0" style="border-radius: 0 !important;">
        <div class="accordion" id="accordionExample" style="border-radius: 0 !important;">
          <div class="card" style="background-color: #212121;">

            <button class="btn btn-block text-left w-100 h-100" type="button" data-toggle="collapse"
              data-target="#collapsePinned" aria-expanded="true" aria-controls="collapseOne" style="border-radius: 0 !important;">
              Pinned
            </button>


            <div id="collapsePinned" class="collapse hide" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="card-body text-left">
                Lorem ipsum dolor sit amet consectetur.
              </div>
            </div>
          </div>
      </li>

      <li class="list-group-item  border-gray p-0 m-0" style="background-color: #212121 !important; border-radius: 0 !important;">
        <div class="accordion" id="accordionExample" style="border-radius: 0 !important;">
          <div class="card" style="background-color: #212121;">

            <button class="btn btn-block text-left w-100 h-100" type="button" data-toggle="collapse"
              data-target="#collapseFiles" aria-expanded="true" aria-controls="collapseOne" style="border-radius: 0 !important;">
              Files
            </button>


            <div id="collapseFiles" class="collapse hide" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="card-body text-left">
                Lorem ipsum dolor sit amet consectetur.
              </div>
            </div>
          </div>
      </li>
    </ul>
  </div>
</div>