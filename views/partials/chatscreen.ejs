<div class="h-100 w-100 d-flex-column mt-3">

  <div class="row justify-content-between d-flex">
    <div class="col-1 mt- d-flex justify-content-left">
      <button class="btn px-0 mr-3 goback" title="Go Back" data-target="#sidepane" data-toggle="collapse"> <i class="fa fa-arrow-left" aria-hidden="true"></i></button>
      <h4 class="mb-0 pt-1"><%= room.name %></h4>
    </div>

    <ul class="nav ">
      
      <!-- <li class="nav-item">
        <a class="nav-link active" href="#inviteUser" title="Invite a friend" data-toggle="modal"> <i class="fa fa-user-friends"
            aria-hidden="true"></i></a>
      </li> -->
      <li class="nav-item">
        <a class="nav-link" href="" data-toggle="tooltip" title="Leave this chat"> <i class="fa fa-sign-out-alt"
            aria-hidden="true"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="" data-toggle="tooltip" title="Mute this chat"><i class="fa fa-volume-mute"
            aria-hidden="true"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="" data-toggle="tooltip" title="Pin this chat"> <i class="fa fa-thumbtack"
            aria-hidden="true"></i></a>
      </li>
    </ul>


  </div>
  <hr class="bg-light">
  <div class="">
    <div class="text-left">

      <!-- <h3>Messages:</h3> -->

      <!-- messages -->
      <div class="d-flex flex-column messages mb-3">
        <% room.messages.forEach(message => { %>

        <div class="msg"> Username:
          <i class="time"> 00:00am </i>
          <p class="message"> <%= message %> </p>
          
        </div>

        <% }) %>
      </div>

    </div>


    <!-- type Message in chat area -->
    <%- include('../partials/sendmessage') %>

  </div>
</div>

<script>
  if(screen.width < 800){
  $('.goback').click(function(){
    $('.mainpage').addClass('d-none') ;
  });
}
</script>